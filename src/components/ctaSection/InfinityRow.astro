---
import { ParallelogramRow } from "@/components/shared/ParallelogramRow";
import { useTranslations } from "@/i18n/utils";

import { InfiniteMarquee } from "./InfiniteMarquee";

const t = useTranslations(Astro.url);
---

<InfiniteMarquee client:load speed={60}>
  {
    Array.from({ length: 10 }).map((_, i) => (
      <div class="flex items-center gap-4 pr-4">
        <span class="text-blck font-alumni text-4xl leading-none font-medium md:text-[40px] md:font-normal lg:text-5xl lg:font-medium">
          {t("infinityRow")}
        </span>
        <ParallelogramRow amount={3} client:load />{" "}
      </div>
    ))
  }
</InfiniteMarquee>

<style>
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-marquee {
    animation-name: marquee;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    animation-play-state: running;
  }
</style>
