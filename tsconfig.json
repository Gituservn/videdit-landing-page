{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "types": [
      "node"
    ],
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "jsxImportSource": "react"
  },
  "include": [
    "src",
    "astro.config.mjs",
    "eslint.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}